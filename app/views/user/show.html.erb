<p id="notice"><%= notice %></p>
<div class="sub-container">
<div class="content-background">
<% if current_user %>
  <% if @user.can_edit?(current_user) %>
    <%= link_to 'Account Settings', edit_user_registration_path %> 
  <% end %>
  <% if @user.has_role?(:admin) %>
    <%= link_to 'Admin View', admin_path %> 
  <% end %>
<% end %>

<% if @user.image.attached? %>
  <%= cl_image_tag(@user.image.key, :width=>400, :crop=>"fit") %>
<% end %>

<h1><%= @user.name %></h1>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>

<p>
  <strong>Genres:</strong>
  <%= @user.genres %>
</p>

<h2>Bands</h2>
<ul>
  <% for band in @user.bands %>
    <li><%= link_to band.name, band %></li>
  <% end %>
</ul>
<% if current_user %>
  <% if @user.can_edit?(current_user) %>
    <%= link_to 'Create an Artist Page', new_band_path %>
  <% end %>
<% end %>
<h2>Gear</h2>
<% for item in @user.items %>
  <p>
    <strong>Brand:</strong>
    <%= item.brand %>
  </p>

  <p>
    <strong>Model:</strong>
    <%= item.model %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= item.description %>
  </p>

  <% if item.for_sale %>
    <p>
      <strong>For Sale:</strong>
      <%= item.price %>
    </p>
  <% end %>
  <%= link_to 'Show', item %>
<% end %>
<% if current_user %>
  <% if @user.can_edit?(current_user) %>
    <%= link_to 'Add a Gear Post', new_item_path %>
  <% end %>
<% end %>
</div>
</div>